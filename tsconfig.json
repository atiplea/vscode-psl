{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "inlineSourceMap": true,
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**.*ts",
        "test/**.*ts"
    ]
}
